<resources>

    <!-- Base Theme -->
    <style name="LibraryAppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/cyan_500</item>
    </style>

    <style name="LibraryAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LibraryAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="LibraryAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- deep amber theme -->
    <style name="amber_dark" parent="LibraryAppTheme.NoActionBar">
        <item name="colorPrimary">@color/amber_500</item>
        <item name="colorPrimaryDark">@color/amber_700</item>
        <item name="colorAccent">@color/blue_500</item>
        <item name="colorControlHighlight">@color/cyan_500</item>
    </style>

    <style name="purple_dark" parent="LibraryAppTheme.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/deep_orange_500</item>
        <item name="colorControlHighlight">@color/light_green_500</item>
    </style>

    <style name="orange" parent="LibraryAppTheme.NoActionBar">
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryDark">@color/orange_700</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="colorControlHighlight">@color/pink_500</item>
    </style>

    <style name="cyan" parent="LibraryAppTheme.NoActionBar">
        <item name="colorPrimary">@color/cyan_500</item>
        <item name="colorPrimaryDark">@color/cyan_700</item>
        <item name="colorAccent">@color/lime_500</item>
        <item name="colorControlHighlight">@color/indigo_500</item>
    </style>

    <style name="deeporange" parent="LibraryAppTheme.NoActionBar">
        <item name="colorPrimary">@color/deep_orange_500</item>
        <item name="colorPrimaryDark">@color/deep_orange_700</item>
        <item name="colorAccent">@color/light_green_200</item>
        <item name="colorControlHighlight">@color/deep_purple_300</item>
    </style>

    <style name="green" parent="LibraryAppTheme.NoActionBar">
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryDark">@color/green_700</item>
        <item name="colorAccent">@color/yellow_500</item>
        <item name="colorControlHighlight">@color/teal_500</item>
    </style>

</resources>
